{
  "name": "Devbox Remote Container",
  "image": "docker.io/worldofgeese/lbob-devcontainer:0.1.5",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/code/.devbox/nix/profile/default/bin/python3"
      },
      "extensions": [
        "jetpack-io.devbox",
        "ms-python.python"
      ]
    },
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.garden/bin"
  },
  "remoteUser": "vscode"
}